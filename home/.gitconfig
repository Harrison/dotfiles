[user]
	name = Philip Harrison
	email = philip@mailharrison.com

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = false
	pager = cat
	quotepath = false
	
[push]
  default = current
	
[color]
	ui = auto

[color "branch"]
	current = cyan bold
	local = yellow bold
	remote = green bold

[color "diff"]
	meta = blue bold
	frag = cyan bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = cyan bold

[apply]
	whitespace = fix

[rerere]
	enabled = true
	
[alias]
	a  = add .
	au = add -u .
	b  = checkout -b
	c  = commit
	d  = difftool
	ds = difftool --staged
	cam  = commit -am
	amend  = commit --amend
	w  = commit -am 'wip'
	what = whatchanged
	s = status -sb
	sub = submodule
	pullsub = submodule foreach git pull origin master
	r  = reset
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l = log --topo-order --decorate
  lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %C(black bold)- %an %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	br = branch
	co = checkout
	rb = rebase master
	up = pull --tags origin master
	pu = push origin master
	put  = push -u origin master
	addp = add --patch
	mr = merge --no-ff
	unstage = reset HEAD
	grep = grep -nw
	prune-all = !git remote | xargs -n 1 git remote prune
	rank = shortlog -sn --no-merges
	browse = !hub browse
	bv= !git branch --color -v | cut -c1-100

[help]
  browser = open
[difftool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = opendiff
[merge]
	tool = opendiff