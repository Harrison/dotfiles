Host github.com
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa_yubikey
  # Enable SSH over HTTPS if SSH is blocked:
  # Hostname ssh.github.com
  # Port 443

Host bastion*.githubapp.com vault-bastion*.githubapp.com
  User feelepxyz
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa_yubikey
  ForwardAgent yes
  RemoteForward "$HOME/.gnupg/S.gpg-agent" "$HOME/.gnupg/S.gpg-agent.extra"
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%C
  ControlPersist 600

Host github.com *.github.net *.githubapp.com
  User feelepxyz
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa_yubikey
  ForwardAgent no

Host gh-shell
  Hostname shell.service.cp1-iad.github.net
  ProxyJump bastion.githubapp.com
  User feelepxyz
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa_yubikey
  ForwardAgent yes
  RemoteForward "$HOME/.gnupg/S.gpg-agent" "$HOME/.gnupg/S.gpg-agent.extra"

Host *
  Protocol 2
  HashKnownHosts yes
  ChallengeResponseAuthentication no
  StrictHostKeyChecking ask
  UseRoaming no
  UseKeyChain no
  VerifyHostKeyDNS ask
  NoHostAuthenticationForLocalhost yes
