# Load zsh massive renamer
autoload -U zmv

# Turn off auto correct
unsetopt correct_all

eval "$(nodenv init -)"

# Load env variables from .envrc - to enable: `direnv allow .`
eval "$(direnv hook zsh)"

eval "$(pyenv init -)"

eval "$(rbenv init -)"

# History
HISTFILE=~/.zhistory
setopt APPEND_HISTORY
HISTSIZE=3600
SAVEHIST=3000
setopt HIST_EXPIRE_DUPS_FIRST
setopt EXTENDED_HISTORY
setopt SHARE_HISTORY

# Editor
export CODE_EDITOR="code"
export EDITOR="$CODE_EDITOR --wait"
export GIT_EDITOR="$EDITOR"
export VISUAL=$EDITOR

export KEYID=0xF6F4212756997CEF
export GPG_TTY=$(tty)
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
gpgconf --launch gpg-agent
gpg-connect-agent updatestartuptty /bye

PATH="/usr/local/opt/gnu-sed/libexec/gnubin:/usr/local/opt/coreutils/libexec/gnubin:$PATH"
PATH="$HOME/Library/Python/3.6/bin:$PATH"
PATH="$HOME/Library/Android/sdk:$PATH"
PATH="$HOME/Library/Android/sdk/platform-tools:$PATH"
PATH="$HOME/.local/bin:$PATH"
export PATH=$HOME/bin:bin:node_modules/.bin:.bundle/binstubs:/usr/local/bin:/usr/local/sbin:$PATH

# Plugins
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
fpath=(/usr/local/share/zsh-completions $fpath)
